{% extends 'base.html.twig' %}

{% block title %}Toutes les séries{% endblock %}

{% block body %}
	<h1>Toutes les séries : </h1>
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }} / {{ program.title }}</h2>
			<h3>Catégorie : {{ program.category.name }}</h3>
			<p>{{ program.synopsis }}</p>
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}

	<a href="/">
		Retour à l'accueil
	</a>
{% endblock %}