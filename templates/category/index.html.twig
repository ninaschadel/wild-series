{% extends 'base.html.twig' %}

{% block title %}All categories{% endblock %}

{% block body %}
    <h1>Toutes les categories : </h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }} </h2>
            <a href="{{ path("category_show", { categoryName: category.name }) }}">Liste des séries de la catégorie {{ category.name }}</a>
        </div>
    {% else %}
        Cette catégorie n'a pas été trouvée.
    {% endfor %}

    <a href="/">
        Retour à l'accueil
    </a>
{% endblock %}